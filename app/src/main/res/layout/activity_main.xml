<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fff0000"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.github.sethfeng.fakephotoview.demo.FakeView
            android:id="@+id/fakeView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

    <com.github.sethfeng.fakephotoview.demo.FakeImageView
            android:id="@+id/fakeImageView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

    <com.github.sethfeng.fakephotoview.demo.FakeTextureView
            android:id="@+id/fakeTextureView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

</LinearLayout>